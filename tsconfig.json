{
    "compilerOptions": {
        /* Language & Environment */
        "target": "ESNext",
        "lib": [
            "ESNext",
            "DOM",
            "DOM.Iterable"
        ],
        "useDefineForClassFields": true,
        /* JSX Support */
        "jsx": "preserve",
        "jsxImportSource": "react", // ðŸ‘ˆ Use "react" here for React files
        /* Modules */
        "module": "ESNext",
        "moduleResolution": "bundler",
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "isolatedModules": true,
        "forceConsistentCasingInFileNames": true,
        /* Type Checking */
        "strict": true,
        "skipLibCheck": true,
        /* JavaScript Support */
        "allowJs": true,
        /* Emit */
        "sourceMap": true,
        "noEmit": true,
        /* Paths */
        "paths": {
            "@/*": [
                "./resources/js/*"
            ],
            // "@react/*": [
            //     "./resources/js/react*"
            // ],
            // "@vue/*": [
            //     "./resources/js/vue*"
            // ],
            "ziggy-js": [
                "./vendor/tightenco/ziggy"
            ]
        },
        /* Types */
        "types": [
            "vite/client"
        ]
    },
    "include": [
        "resources/js/**/*.ts",
        "resources/js/**/*.tsx",
        "resources/js/**/*.vue",
        "resources/js/**/*.d.ts",
        "resources/js/types/vite-env.d.ts",
        "resources/js/types/global.d.ts",
        "resources/js/types/ziggy-react.d.ts",
        "resources/js/types/ziggy-vue.d.ts"
    ]
}