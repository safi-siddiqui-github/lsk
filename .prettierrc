{
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5",
    "tabWidth": 4,
    "useTabs": false,
    "printWidth": 80,
    "bracketSpacing": true,
    "arrowParens": "always",
    "endOfLine": "lf",
    "jsxSingleQuote": true,
    "vueIndentScriptAndStyle": true,
    "htmlWhitespaceSensitivity": "css",
    "tailwindPreserveWhitespace": true,
    "tailwindPreserveDuplicates": false,
    "plugins": [
        "prettier-plugin-blade",
        "prettier-plugin-tailwindcss",
        "@prettier/plugin-php",
        "prettier-plugin-organize-imports"
    ],
    "tailwindFunctions": [
        "clsx",
        "cn"
    ],
    "overrides": [
        {
            "files": [
                "*.blade.php"
            ],
            "options": {
                "parser": "blade",
                "tabWidth": 4
            }
        }
    ]
}